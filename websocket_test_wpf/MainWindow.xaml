<Window x:Class="websocket_test_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:websocket_test_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="640">
    <Grid>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Height="30" Margin="558,10,0,0" VerticalAlignment="Top" Width="64" Click="button_Click"/>
        <TextBox x:Name="sendText" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="543" KeyDown="sendText_KeyDown"/>
        <TextBox x:Name="commandText" HorizontalAlignment="Left" Margin="10,45,0,10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" DataContext="{Binding}" Width="612"/>
    </Grid>
</Window>
